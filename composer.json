{
    "name": "jedkirby/tweet-entity-linker",
    "description": "Convert Twitter API Tweet entities such as URLs, Hashtags and User Mentions into their respective HTML entities.",
    "keywords": [
        "twitter",
        "tweet",
        "hashtag",
        "entity",
        "convert",
        "linkify"
    ],
    "license": "MIT",
    "homepage": "https://jedkirby.com",
    "authors": [
        {
            "name": "James Kirby",
            "email": "me@jedkirby.com"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "twitter/twitter-text",
                "version": "1.14.2",
                "source": {
                    "url": "https://github.com/twitter/twitter-text",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "php": ">=5.6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "satooshi/php-coveralls": "^1.0",
        "jedkirby/php-cs": "^1.0",
        "twitter/twitter-text": "*",
        "symfony/yaml": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Jedkirby\\TweetEntityLinker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jedkirby\\TweetEntityLinker\\Tests\\": "tests/"
        }
    }
}
